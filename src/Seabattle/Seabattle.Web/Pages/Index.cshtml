@page
@model Seabattle.Web.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

@section scripts {
    <script src="~/js/app/PageGame.js"></script>
}


<article id="cnt-main">

    <my-game-board width="10"></my-game-board>
    


    <div class="pure-g" v-if="isInGame">
        <div class="pure-u-1-3 cnt-player-info">
            <h1>YOU</h1>
        </div>
        <div class="pure-u-1-3">
            <div class="pure-g">
                <div class="pure-u-1-2 cnt-board">
                    <my-game-board width="10"></my-game-board>
                </div>
                <div class="pure-u-1-2 cnt-board">
                    <my-game-board width="10"></my-game-board>
                </div>
            </div>
        </div>
        <div class="pure-u-1-3 cnt-player-info">
            <h1>OPPONENT</h1>
        </div>
    </div>
    <div v-else>
        <p>Let's play?</p>
        <button v-on:click="findNewGameSession()">NEW GAME</button>
    </div>


</article>

